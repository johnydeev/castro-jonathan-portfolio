{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "incremental": true,
        "baseUrl": ".",
        "paths": {
        "@/*": ["src/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/components/AboutMe.tsx", "src/components/Context.tsx"],
    "exclude": ["node_modules"]
}
